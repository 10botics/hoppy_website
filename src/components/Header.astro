---
import { getLangFromUrl, useTranslations, languages, getLocalizedPath, type Lang } from '../i18n/ui';

interface Props {
	lang: Lang;
	currentPath: string;
}

const { lang, currentPath } = Astro.props;
const t = useTranslations(lang);

// Get the path without language prefix for switching
const pathWithoutLang = currentPath.replace(/^\/(tc|en)/, '') || '/';
---

<nav class="main-nav">
	<div class="nav-container">
		<a href={`/${lang}`} class="nav-logo">
			<span class="nav-logo-text">H<span class="bunny-o">o</span>ppy</span>
		</a>
		<button class="mobile-menu-btn" aria-label="Toggle menu">
			<span class="hamburger"></span>
		</button>
		<ul class="nav-links">
			<li><a href={`/${lang}`} class:list={["nav-link", { active: currentPath === `/${lang}` || currentPath === `/${lang}/` }]}>{t('nav.home')}</a></li>
			<li><a href={`/${lang}/supported-question-images`} class:list={["nav-link", { active: currentPath.includes('/supported-question-images') }]}>{t('nav.widgets')}</a></li>
			<li><a href={`/${lang}/availability`} class:list={["nav-link", { active: currentPath.includes('/availability') }]}>{t('nav.availability')}</a></li>
			<li><a href={`/${lang}/downloadproduction`} class:list={["nav-link", { active: currentPath.includes('/downloadproduction') }]}>{t('nav.download')}</a></li>
			<li><a href={`/${lang}/qna`} class:list={["nav-link", { active: currentPath.includes('/qna') }]}>{t('nav.qna')}</a></li>
			<li class="lang-switcher">
				<div class="lang-dropdown">
					<button class="lang-btn" aria-label={t('langSwitcher.label')}>
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="10"></circle>
							<line x1="2" y1="12" x2="22" y2="12"></line>
							<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
						</svg>
						<span class="current-lang">{lang === 'tc' ? '繁' : 'EN'}</span>
						<svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<polyline points="6 9 12 15 18 9"></polyline>
						</svg>
					</button>
					<div class="lang-menu">
						{Object.entries(languages).map(([code, name]) => (
							<a 
								href={getLocalizedPath(pathWithoutLang, code as Lang)}
								class:list={["lang-option", { active: lang === code }]}
							>
								{name}
							</a>
						))}
					</div>
				</div>
			</li>
		</ul>
	</div>
</nav>

<!-- Mobile Navigation Sidebar -->
<div class="mobile-menu" id="mobile-menu">
	<div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>
	<div class="mobile-menu-sidebar">
		<!-- Mobile menu header -->
		<div class="mobile-menu-header">
			<a href={`/${lang}`} class="mobile-logo">
				<span class="nav-logo-text">H<span class="bunny-o">o</span>ppy</span>
			</a>
			<button
				type="button"
				class="mobile-menu-close"
				id="mobile-menu-close"
				aria-label="Close menu"
			>
				<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
				</svg>
			</button>
		</div>
		
		<!-- Mobile menu content - scrollable -->
		<div class="mobile-menu-content">
			<ul class="mobile-nav-links">
				<li><a href={`/${lang}`} class:list={["mobile-nav-link", { active: currentPath === `/${lang}` || currentPath === `/${lang}/` }]}>{t('nav.home')}</a></li>
				<li><a href={`/${lang}/supported-question-images`} class:list={["mobile-nav-link", { active: currentPath.includes('/supported-question-images') }]}>{t('nav.widgets')}</a></li>
				<li><a href={`/${lang}/availability`} class:list={["mobile-nav-link", { active: currentPath.includes('/availability') }]}>{t('nav.availability')}</a></li>
				<li><a href={`/${lang}/downloadproduction`} class:list={["mobile-nav-link", { active: currentPath.includes('/downloadproduction') }]}>{t('nav.download')}</a></li>
				<li><a href={`/${lang}/qna`} class:list={["mobile-nav-link", { active: currentPath.includes('/qna') }]}>{t('nav.qna')}</a></li>
			</ul>

			<!-- Mobile Language Switcher -->
			<div class="mobile-lang-switcher">
				<div class="mobile-lang-dropdown">
					<button class="mobile-lang-btn" aria-label={t('langSwitcher.label')}>
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="10"></circle>
							<line x1="2" y1="12" x2="22" y2="12"></line>
							<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
						</svg>
						<span class="current-lang">{lang === 'tc' ? '繁' : 'EN'}</span>
						<svg class="chevron" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<polyline points="6 9 12 15 18 9"></polyline>
						</svg>
					</button>
					<div class="mobile-lang-menu">
						{Object.entries(languages).map(([code, name]) => (
							<a 
								href={getLocalizedPath(pathWithoutLang, code as Lang)}
								class:list={["mobile-lang-option", { active: lang === code }]}
							>
								{name}
							</a>
						))}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	// Wait for DOM to be fully loaded
	document.addEventListener('DOMContentLoaded', () => {
		// Mobile menu toggle
		const menuBtn = document.querySelector('.mobile-menu-btn');
		const mobileMenu = document.getElementById('mobile-menu');
		const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
		const mobileMenuClose = document.getElementById('mobile-menu-close');
		
		// Open mobile menu
		if (menuBtn && mobileMenu) {
			menuBtn.addEventListener('click', () => {
				mobileMenu.classList.add('open');
				menuBtn.classList.add('open');
				document.body.style.overflow = 'hidden'; // Prevent body scroll
			});
		}

		// Close mobile menu function
		const closeMobileMenu = () => {
			if (mobileMenu && menuBtn) {
				mobileMenu.classList.remove('open');
				menuBtn.classList.remove('open');
				document.body.style.overflow = ''; // Restore body scroll
			}
		};

		// Close menu when clicking overlay
		if (mobileMenuOverlay) {
			mobileMenuOverlay.addEventListener('click', closeMobileMenu);
		}

		// Close menu when clicking close button
		if (mobileMenuClose) {
			mobileMenuClose.addEventListener('click', closeMobileMenu);
		}

		// Close mobile menu when clicking on a link
		const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
		mobileNavLinks.forEach(link => {
			link.addEventListener('click', closeMobileMenu);
		});

		// Desktop language dropdown toggle
		const langBtn = document.querySelector('.lang-btn');
		const langDropdown = document.querySelector('.lang-dropdown');

		if (langBtn && langDropdown) {
			langBtn.addEventListener('click', (e) => {
				e.stopPropagation();
				langDropdown.classList.toggle('open');
			});

			// Close dropdown when clicking outside
			document.addEventListener('click', () => {
				langDropdown.classList.remove('open');
			});

			// Prevent clicks inside dropdown from closing it
			langDropdown.addEventListener('click', (e) => {
				e.stopPropagation();
			});
		}

		// Mobile language dropdown toggle
		const mobileLangBtn = document.querySelector('.mobile-lang-btn');
		const mobileLangDropdown = document.querySelector('.mobile-lang-dropdown');

		if (mobileLangBtn && mobileLangDropdown) {
			mobileLangBtn.addEventListener('click', (e) => {
				e.stopPropagation();
				mobileLangDropdown.classList.toggle('open');
			});

			// Prevent clicks inside dropdown from closing it
			mobileLangDropdown.addEventListener('click', (e) => {
				e.stopPropagation();
			});

			// Close mobile lang dropdown when clicking outside
			document.addEventListener('click', (e) => {
				if (!mobileLangDropdown.contains(e.target as Node)) {
					mobileLangDropdown.classList.remove('open');
				}
			});
		}
	});
</script>

<style>
	.main-nav {
		position: sticky;
		top: 0;
		z-index: 999;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(30, 58, 95, 0.08);
		box-shadow: 0 2px 20px rgba(0, 0, 0, 0.04);
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.875rem 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		position: relative;
	}

	.nav-logo {
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.nav-logo-text {
		font-size: 1.75rem;
		font-weight: 800;
		color: var(--hoppy-navy);
		letter-spacing: -0.5px;
	}

	.nav-logo-text .bunny-o {
		color: var(--hoppy-blue);
		font-style: italic;
	}

	.nav-links {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		gap: 0.5rem;
		align-items: center;
	}

	.nav-link {
		text-decoration: none;
		color: var(--hoppy-navy);
		font-weight: 500;
		font-size: 0.95rem;
		padding: 0.625rem 1.125rem;
		border-radius: 10px;
		transition: all 0.25s ease;
		position: relative;
	}

	.nav-link:hover {
		background: rgba(63, 181, 219, 0.1);
		color: var(--hoppy-blue);
	}

	.nav-link.active {
		background: var(--hoppy-blue);
		color: white;
	}

	.nav-link.active:hover {
		background: #35a3c9;
		color: white;
	}

	/* Language Switcher */
	.lang-switcher {
		position: relative;
		margin-left: 0.5rem;
	}

	.lang-dropdown {
		position: relative;
	}

	.lang-btn {
		display: flex;
		align-items: center;
		gap: 0.4rem;
		padding: 0.5rem 0.75rem;
		background: var(--hoppy-gray);
		border: 1px solid rgba(30, 58, 95, 0.1);
		border-radius: 8px;
		cursor: pointer;
		color: var(--hoppy-navy);
		font-weight: 600;
		font-size: 0.85rem;
		transition: all 0.25s ease;
	}

	.lang-btn:hover {
		background: rgba(63, 181, 219, 0.1);
		border-color: var(--hoppy-blue);
	}

	.lang-btn .chevron {
		transition: transform 0.2s ease;
	}

	.lang-dropdown.open .lang-btn .chevron {
		transform: rotate(180deg);
	}

	.current-lang {
		font-size: 0.85rem;
	}

	.lang-menu {
		position: absolute;
		top: 100%;
		right: 0;
		margin-top: 0.5rem;
		background: white;
		border: 1px solid rgba(30, 58, 95, 0.1);
		border-radius: 10px;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
		overflow: hidden;
		opacity: 0;
		visibility: hidden;
		transform: translateY(-10px);
		transition: all 0.2s ease;
		min-width: 140px;
	}

	.lang-dropdown.open .lang-menu {
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
	}

	.lang-option {
		display: block;
		padding: 0.75rem 1rem;
		text-decoration: none;
		color: var(--hoppy-navy);
		font-size: 0.9rem;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.lang-option:hover {
		background: rgba(63, 181, 219, 0.1);
		color: var(--hoppy-blue);
	}

	.lang-option.active {
		background: var(--hoppy-blue);
		color: white;
	}

	/* Mobile menu button */
	.mobile-menu-btn {
		display: none;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		z-index: 1002;
		position: relative;
	}

	.hamburger {
		display: block;
		width: 24px;
		height: 2px;
		background: var(--hoppy-navy);
		position: relative;
		transition: all 0.3s ease;
	}

	.hamburger::before,
	.hamburger::after {
		content: '';
		position: absolute;
		width: 24px;
		height: 2px;
		background: var(--hoppy-navy);
		transition: all 0.3s ease;
	}

	.hamburger::before {
		top: -7px;
	}

	.hamburger::after {
		top: 7px;
	}

	.mobile-menu-btn.open .hamburger {
		background: transparent;
	}

	.mobile-menu-btn.open .hamburger::before {
		top: 0;
		transform: rotate(45deg);
	}

	.mobile-menu-btn.open .hamburger::after {
		top: 0;
		transform: rotate(-45deg);
	}

	/* Mobile Navigation Sidebar */
	.mobile-menu {
		display: none;
		position: fixed;
		inset: 0;
		z-index: 1000;
	}

	.mobile-menu.open {
		display: block;
	}

	.mobile-menu-overlay {
		position: fixed;
		inset: 0;
		background-color: rgba(0, 0, 0, 0.25);
		z-index: 1000;
	}

	.mobile-menu-sidebar {
		position: fixed;
		left: 0;
		top: 0;
		height: 100%;
		width: 320px;
		background-color: #F9FAFB;
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
		display: flex;
		flex-direction: column;
		z-index: 1001;
		transform: translateX(-100%);
		transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.mobile-menu.open .mobile-menu-sidebar {
		transform: translateX(0);
	}

	.mobile-menu-header {
		background-color: white;
		padding: 1.5rem 1.5rem;
		border-bottom: 1px solid rgba(229, 231, 235, 1);
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-shrink: 0;
	}

	.mobile-logo {
		text-decoration: none;
		display: flex;
		align-items: center;
	}

	.mobile-menu-close {
		background: none;
		border: none;
		color: var(--hoppy-blue);
		cursor: pointer;
		padding: 0.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: color 0.2s ease;
	}

	.mobile-menu-close:hover {
		color: #35a3c9;
		transform: none;
		box-shadow: none;
	}

	.mobile-menu-close svg {
		width: 24px;
		height: 24px;
		stroke-width: 2;
	}

	.mobile-menu-content {
		flex: 1;
		overflow-y: auto;
		padding: 1rem 1rem;
		display: flex;
		flex-direction: column;
	}

	.mobile-nav-links {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.mobile-nav-link {
		display: block;
		padding: 0.75rem 1rem;
		color: var(--hoppy-navy);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		border-radius: 8px;
		transition: all 0.2s ease;
	}

	.mobile-nav-link:hover {
		background-color: rgba(63, 181, 219, 0.1);
		color: var(--hoppy-blue);
	}

	.mobile-nav-link.active {
		background-color: var(--hoppy-blue);
		color: white;
	}

	/* Mobile Language Switcher */
	.mobile-lang-switcher {
		margin-top: auto;
		padding-top: 1rem;
		border-top: 1px solid rgba(229, 231, 235, 1);
	}

	.mobile-lang-dropdown {
		position: relative;
	}

	.mobile-lang-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		width: 100%;
		padding: 0.75rem 1rem;
		background: white;
		border: 1px solid rgba(30, 58, 95, 0.1);
		border-radius: 8px;
		cursor: pointer;
		color: var(--hoppy-navy);
		font-weight: 600;
		font-size: 0.9rem;
		transition: all 0.25s ease;
	}

	.mobile-lang-btn:hover {
		background: rgba(63, 181, 219, 0.1);
		border-color: var(--hoppy-blue);
		transform: none;
		box-shadow: none;
	}

	.mobile-lang-btn .chevron {
		transition: transform 0.2s ease;
	}

	.mobile-lang-dropdown.open .mobile-lang-btn .chevron {
		transform: rotate(180deg);
	}

	.mobile-lang-menu {
		position: absolute;
		bottom: 100%;
		left: 0;
		right: 0;
		margin-bottom: 0.5rem;
		background: white;
		border: 1px solid rgba(30, 58, 95, 0.1);
		border-radius: 10px;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
		overflow: hidden;
		opacity: 0;
		visibility: hidden;
		transform: translateY(10px);
		transition: all 0.2s ease;
	}

	.mobile-lang-dropdown.open .mobile-lang-menu {
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
	}

	.mobile-lang-option {
		display: block;
		padding: 0.75rem 1rem;
		text-decoration: none;
		color: var(--hoppy-navy);
		font-size: 0.9rem;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.mobile-lang-option:hover {
		background: rgba(63, 181, 219, 0.1);
		color: var(--hoppy-blue);
	}

	.mobile-lang-option.active {
		background: var(--hoppy-blue);
		color: white;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.nav-container {
			padding: 0.75rem 1rem;
		}

		.mobile-menu-btn {
			display: block;
		}

		.nav-links {
			display: none;
		}
	}
</style>


