---
import Layout from '../layouts/Layout.astro';
import { useTranslations, getLocalizedPath, type Lang } from '../i18n/ui';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<Layout lang={lang}>
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <div class="hero-text">
          <div class="tagline">{t('home.tagline')}</div>
          <h1 class="logo-text">
            H<span class="bunny-o">o</span>ppy
          </h1>
          <p class="hero-description">
            {t('home.heroDescription')}
          </p>
          <div class="cta-buttons">
            <div class="store-buttons">
              <a href="https://apps.apple.com/hk/app/hoppy-learn-10x-faster/id6754865277" target="_blank" rel="noopener noreferrer" class="store-btn apple-store">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.05 20.28c-.98.95-2.05.88-3.08.4-1.09-.5-2.08-.48-3.24 0-1.44.62-2.2.44-3.08-.4C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
                </svg>
                <div class="store-btn-text">
                  <span class="store-label">{t('home.appStore.downloadOn')}</span>
                  <span class="store-name">{t('home.appStore.appStore')}</span>
                </div>
              </a>
              <a href="https://play.google.com/store/apps/details?id=day.hoppy.app" target="_blank" rel="noopener noreferrer" class="store-btn google-play">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"/>
                </svg>
                <div class="store-btn-text">
                  <span class="store-label">{t('home.googlePlay.getItOn')}</span>
                  <span class="store-name">{t('home.googlePlay.googlePlay')}</span>
                </div>
              </a>
            </div>
            <a href={getLocalizedPath('/supported-question-images', lang)} class="btn btn-tertiary">{t('home.supportedWidgets')}</a>
          </div>
        </div>
        <div class="hero-image">
          <img src="/unnamed (2).png" alt="Hoppy the bunny mascot" class="mascot-image animate-bounce" />
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features">
      <h2>{t('home.whyChoose')}</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">üìö</div>
          <h3>{t('home.features.interactive.title')}</h3>
          <p>{t('home.features.interactive.description')}</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">üé®</div>
          <h3>{t('home.features.creative.title')}</h3>
          <p>{t('home.features.creative.description')}</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">‚≠ê</div>
          <h3>{t('home.features.progress.title')}</h3>
          <p>{t('home.features.progress.description')}</p>
        </div>
      </div>
    </section>

    <!-- Ruler Section -->
    <section class="ruler-section">
      <div class="ruler-content">
        <img src="/hoppy-ruler.jpeg" alt="Hoppy with ruler" class="ruler-image" />
        <div class="ruler-text">
          <h2>{t('home.ruler.title')}</h2>
          <p>{t('home.ruler.description')}</p>
        </div>
      </div>
    </section>

    <!-- Footer CTA -->
    <section class="footer-cta">
      <div class="cta-content">
        <img src="/hoppy-logo.jpeg" alt="Hoppy logo" class="footer-logo" />
        <h2>{t('home.cta.title')}</h2>
        <p>{t('home.cta.subtitle')}</p>
        <div class="footer-store-buttons">
          <a href="https://apps.apple.com/hk/app/hoppy-learn-10x-faster/id6754865277" target="_blank" rel="noopener noreferrer" class="store-btn apple-store footer-store">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.05 20.28c-.98.95-2.05.88-3.08.4-1.09-.5-2.08-.48-3.24 0-1.44.62-2.2.44-3.08-.4C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
            </svg>
            <div class="store-btn-text">
              <span class="store-label">{t('home.appStore.downloadOn')}</span>
              <span class="store-name">{t('home.appStore.appStore')}</span>
            </div>
          </a>
          <a href="https://play.google.com/store/apps/details?id=day.hoppy.app" target="_blank" rel="noopener noreferrer" class="store-btn google-play footer-store">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"/>
            </svg>
            <div class="store-btn-text">
              <span class="store-label">{t('home.googlePlay.getItOn')}</span>
              <span class="store-name">{t('home.googlePlay.googlePlay')}</span>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    width: 100%;
    overflow-x: hidden;
  }

  /* Hero Section */
  .hero {
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, var(--hoppy-gray) 0%, #E5E5E5 100%);
  }

  .hero-content {
    max-width: 1200px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
  }

  .hero-text {
    animation: fadeInUp 0.8s ease-out;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--hoppy-navy);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .logo-text {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .bunny-o {
    color: var(--hoppy-blue);
    font-style: italic;
  }

  .hero-description {
    font-size: 1.1rem;
    color: var(--hoppy-navy);
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .store-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .store-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: 180px;
  }

  .store-btn.apple-store {
    background-color: #000000;
    color: #ffffff;
  }

  .store-btn.apple-store:hover {
    background-color: #333333;
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  .store-btn.google-play {
    background-color: #000000;
    color: #ffffff;
  }

  .store-btn.google-play:hover {
    background-color: #333333;
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  .store-btn-text {
    display: flex;
    flex-direction: column;
    text-align: left;
    line-height: 1.2;
  }

  .store-label {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.9;
  }

  .store-name {
    font-size: 1.15rem;
    font-weight: 600;
  }

  .footer-store-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 1rem;
  }

  .store-btn.footer-store {
    background-color: var(--hoppy-white);
    color: var(--hoppy-navy);
  }

  .store-btn.footer-store:hover {
    background-color: var(--hoppy-gray);
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(255, 255, 255, 0.2);
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background-color: var(--hoppy-blue);
    color: var(--hoppy-white);
  }

  .btn-primary:hover {
    background-color: #35a3c9;
    box-shadow: 0 8px 20px rgba(63, 181, 219, 0.4);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--hoppy-blue);
    border: 2px solid var(--hoppy-blue);
  }

  .btn-secondary:hover {
    background-color: var(--hoppy-blue);
    color: var(--hoppy-white);
  }

  .btn-tertiary {
    background-color: var(--hoppy-navy);
    color: var(--hoppy-white);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn-tertiary:hover {
    background-color: #1e3a5f;
    box-shadow: 0 8px 20px rgba(30, 58, 95, 0.4);
  }

  .btn-large {
    padding: 1.25rem 2.5rem;
    font-size: 1.25rem;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeInUp 1s ease-out 0.2s both;
  }

  .mascot-image {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  /* Features Section */
  .features {
    padding: 5rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .features h2 {
    margin-bottom: 3rem;
    color: var(--hoppy-navy);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature-card {
    background: var(--hoppy-white);
    padding: 2.5rem 2rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .feature-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    margin-bottom: 1rem;
    color: var(--hoppy-navy);
  }

  .feature-card p {
    color: var(--hoppy-gray-dark);
    line-height: 1.8;
  }

  /* Ruler Section */
  .ruler-section {
    padding: 5rem 2rem;
    background-color: var(--hoppy-white);
    margin: 2rem auto;
    max-width: 1400px;
    border-radius: 30px;
  }

  .ruler-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .ruler-image {
    width: 100%;
    height: auto;
    border-radius: 20px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }

  .ruler-text h2 {
    margin-bottom: 1.5rem;
    color: var(--hoppy-navy);
  }

  .ruler-text p {
    color: var(--hoppy-gray-dark);
    line-height: 1.9;
  }

  /* Footer CTA */
  .footer-cta {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, var(--hoppy-blue) 0%, #35a3c9 100%);
    text-align: center;
    color: var(--hoppy-white);
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .footer-logo {
    width: 200px;
    height: auto;
    margin-bottom: 2rem;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: 30px;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.2));
  }

  .footer-cta h2 {
    color: var(--hoppy-white);
    margin-bottom: 1rem;
  }

  .footer-cta p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    font-size: 1.2rem;
  }

  .footer-cta .btn-primary {
    background-color: var(--hoppy-white);
    color: var(--hoppy-blue);
  }

  .footer-cta .btn-primary:hover {
    background-color: var(--hoppy-gray);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.3);
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .hero-text {
      order: 2;
    }

    .hero-image {
      order: 1;
    }

    .ruler-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .ruler-image {
      max-width: 400px;
      margin: 0 auto;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 968px) {
    .cta-buttons {
      align-items: center;
    }
  }

  @media (max-width: 600px) {
    .hero {
      min-height: auto;
      padding: 2rem 0.5rem;
    }

    .tagline {
      font-size: 1rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .btn {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }

    .btn-large {
      padding: 1rem 2rem;
      font-size: 1.1rem;
    }

    .store-buttons {
      flex-direction: column;
      width: 100%;
      align-items: center;
    }

    .store-btn {
      width: 100%;
      max-width: 220px;
      justify-content: center;
    }

    .footer-store-buttons {
      flex-direction: column;
      align-items: center;
    }

    .features, .ruler-section, .footer-cta {
      padding: 3rem 1rem;
    }
  }
</style>


