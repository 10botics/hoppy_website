<style>
  .qna-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--hoppy-gray);
  }

  /* Header Section */
  .qna-header {
    background: linear-gradient(135deg, var(--hoppy-blue) 0%, #35a3c9 100%);
    padding: 2rem 2rem 4rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .header-content {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .back-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--hoppy-white);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    align-self: flex-start;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    background-color: rgba(255, 255, 255, 0.1);
  }

  .back-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateX(-5px);
  }

  .back-link svg {
    width: 20px;
    height: 20px;
  }

  .header-logo {
    width: 120px;
    height: auto;
    padding: 12px;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .qna-header h1 {
    color: var(--hoppy-white);
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .header-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    margin: 0;
  }

  /* Content Section */
  .qna-content {
    flex: 1;
    padding: 4rem 2rem;
  }

  .content-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .qna-intro {
    text-align: center;
    margin-bottom: 3rem;
    background-color: var(--hoppy-white);
    padding: 2rem;
    border-radius: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  }

  .question-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .qna-intro p {
    color: var(--hoppy-gray-dark);
    font-size: 1.1rem;
    margin: 0;
  }

  /* Q&A List */
  .qna-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .qna-item {
    background: var(--hoppy-white);
    border-radius: 24px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .qna-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .qna-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(63, 181, 219, 0.1) 0%, rgba(53, 163, 201, 0.1) 100%);
    border-radius: 16px;
  }

  .qna-text {
    flex: 1;
  }

  .qna-question {
    color: var(--hoppy-navy);
    font-size: 1.4rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.4;
  }

  .qna-answer {
    color: var(--hoppy-gray-dark);
    font-size: 1.05rem;
    line-height: 1.8;
    margin: 0;
  }

  /* Contact Section */
  .contact-section {
    text-align: center;
    background: linear-gradient(135deg, var(--hoppy-blue) 0%, #35a3c9 100%);
    padding: 3rem 2rem;
    border-radius: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  }

  .contact-icon {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .contact-section h2 {
    color: var(--hoppy-white);
    margin: 0 0 1rem 0;
    font-size: 2rem;
  }

  .contact-section p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    margin: 0 0 2rem 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--hoppy-white);
    color: var(--hoppy-blue);
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .contact-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    background: var(--hoppy-gray);
  }

  /* Footer */
  .qna-footer {
    background-color: var(--hoppy-navy);
    padding: 3rem 2rem;
    text-align: center;
  }

  .footer-link {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: var(--hoppy-white);
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .footer-link:hover {
    transform: translateY(-5px);
  }

  .footer-logo {
    width: 120px;
    height: auto;
    padding: 15px;
    background-color: var(--hoppy-white);
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  .footer-link span {
    color: var(--hoppy-white);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .qna-header {
      padding: 1.5rem 1rem 3rem;
    }

    .qna-content {
      padding: 2rem 1rem;
    }

    .qna-intro,
    .contact-section {
      padding: 2rem 1.5rem;
      border-radius: 20px;
    }

    .qna-item {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 1.5rem;
    }

    .qna-icon {
      width: 50px;
      height: 50px;
      font-size: 2rem;
    }

    .qna-question {
      font-size: 1.2rem;
    }

    .qna-answer {
      font-size: 1rem;
    }

    .contact-section h2 {
      font-size: 1.5rem;
    }

    .contact-section p {
      font-size: 1rem;
    }

    .back-link {
      font-size: 0.9rem;
    }

    .header-logo {
      width: 100px;
    }
  }

  @media (max-width: 480px) {
    .qna-intro,
    .contact-section {
      padding: 1.5rem 1rem;
    }

    .qna-item {
      padding: 1.25rem;
    }

    .qna-footer {
      padding: 2rem 1rem;
    }

    .footer-logo {
      width: 100px;
    }

    .question-icon,
    .contact-icon {
      font-size: 3rem;
    }
  }
</style>

