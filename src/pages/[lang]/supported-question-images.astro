<style>
  main {
    width: 100%;
    overflow-x: hidden;
  }

  /* Hero Section */
  .hero {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #0f172a 0%, #1e3a5f 50%, #0c4a6e 100%);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(63, 181, 219, 0.15) 0%, transparent 40%),
      radial-gradient(circle at 80% 20%, rgba(147, 51, 234, 0.1) 0%, transparent 40%);
    pointer-events: none;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    color: #ffffff;
    margin-bottom: 1rem;
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .hero-description {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* Widgets Gallery */
  .widgets-gallery {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .widget-section {
    margin-bottom: 4rem;
    background: #ffffff;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .widget-section:hover {
    box-shadow: 
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(-2px);
  }

  .widget-header {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid #f1f5f9;
  }

  .widget-icon {
    font-size: 3rem;
    background: linear-gradient(135deg, #e0f2fe 0%, #ddd6fe 100%);
    padding: 1rem;
    border-radius: 16px;
    flex-shrink: 0;
  }

  .widget-info h2 {
    color: #0f172a;
    margin-bottom: 0.5rem;
    font-size: 1.75rem;
    font-weight: 700;
  }

  .widget-info p {
    color: #64748b;
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  /* Subsection Labels */
  .subsection-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: #3FB5DB;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    margin-top: 1.5rem;
  }

  .subsection-label:first-of-type {
    margin-top: 0;
  }

  /* Screenshots Grid */
  .screenshots-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .screenshot-card {
    background: linear-gradient(135deg, #fafafa 0%, #f0f4f8 100%);
    border-radius: 12px;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .screenshot-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-color: #3FB5DB;
  }

  .screenshot-card img {
    width: 100%;
    max-width: 200px;
    height: auto;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
  }

  .screenshot-label {
    font-size: 0.75rem;
    color: #64748b;
    font-weight: 500;
    text-align: center;
  }

  /* Widget Examples */
  .widget-examples {
    display: grid;
    gap: 1.5rem;
  }

  .widget-examples.two-column {
