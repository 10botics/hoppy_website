---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations, defaultLang } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const langPrefix = lang === defaultLang ? '' : `/${lang}`;
const homeHref = `${langPrefix}/`;
---

<Layout lang={lang}>
	<main class="not-found-container">
		<div class="not-found-content">
			<div class="error-code">404</div>
			<h1>{t('notFound.oops')}</h1>
			<p class="message">{t('notFound.message')}</p>
			
			<div class="redirect-info">
				<p>
					{t('notFound.redirecting')} 
					<span id="countdown" class="countdown">3</span> 
					{t('notFound.seconds')}
				</p>
			</div>
			
			<a href={homeHref} class="home-button">
				{t('notFound.backToHome')}
			</a>
		</div>
	</main>
</Layout>

<script define:vars={{ homeHref }}>
	let timeLeft = 3;
	const countdownElement = document.getElementById('countdown');
	
	const countdown = setInterval(() => {
		timeLeft--;
		if (countdownElement) {
			countdownElement.textContent = timeLeft.toString();
		}
		
		if (timeLeft <= 0) {
			clearInterval(countdown);
			window.location.href = homeHref;
		}
	}, 1000);
</script>

<style>
	.not-found-container {
		min-height: calc(100vh - 200px);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}

	.not-found-content {
		text-align: center;
		background: white;
		padding: 3rem 2rem;
		border-radius: 20px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
		max-width: 600px;
		width: 100%;
		animation: fadeInUp 0.6s ease-out;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.error-code {
		font-size: 8rem;
		font-weight: bold;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1;
		margin-bottom: 1rem;
		animation: bounce 1s ease-in-out infinite;
	}

	@keyframes bounce {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	h1 {
		font-size: 2rem;
		color: #333;
		margin-bottom: 1rem;
	}

	.message {
		font-size: 1.1rem;
		color: #666;
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.redirect-info {
		background: #f8f9fa;
		padding: 1rem;
		border-radius: 10px;
		margin-bottom: 2rem;
		font-size: 1rem;
		color: #555;
	}

	.countdown {
		display: inline-block;
		font-weight: bold;
		font-size: 1.5rem;
		color: #667eea;
		min-width: 1.5rem;
		animation: pulse 1s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.1);
		}
	}

	.home-button {
		display: inline-block;
		padding: 1rem 2rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		text-decoration: none;
		border-radius: 50px;
		font-weight: bold;
		font-size: 1.1rem;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
	}

	.home-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
	}

	@media (max-width: 768px) {
		.error-code {
			font-size: 6rem;
		}

		h1 {
			font-size: 1.5rem;
		}

		.message {
			font-size: 1rem;
		}

		.not-found-content {
			padding: 2rem 1.5rem;
		}
	}
</style>

