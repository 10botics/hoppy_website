---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="availability-page">
    <!-- Header Section -->
    <header class="availability-header">
      <div class="header-content">
        <a href="/" class="back-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back to Home
        </a>
        <img src="/hoppy-logo.jpeg" alt="Hoppy logo" class="header-logo" />
        <h1>Available Regions</h1>
        <p class="header-subtitle">See where Hoppy is hopping around the world!</p>
      </div>
    </header>

    <!-- Availability Content -->
    <section class="availability-content">
      <div class="content-wrapper">
        <div class="regions-intro">
          <div class="globe-icon">üåè</div>
          <h2>Where Can You Find Hoppy?</h2>
          <p>Hoppy is currently available in the following regions. We're working hard to bring our learning adventures to more places soon!</p>
        </div>

        <div class="regions-grid">
          <!-- Hong Kong -->
          <div class="region-card available">
            <div class="region-flag">üá≠üá∞</div>
            <div class="region-info">
              <h3>Hong Kong</h3>
              <span class="region-status">
                <span class="status-dot"></span>
                Available Now
              </span>
            </div>
            <div class="region-features">
              <span class="feature-tag">Full Access</span>
              <span class="feature-tag">Local Support</span>
            </div>
          </div>
        </div>

        <!-- Coming Soon Section -->
        <div class="coming-soon-section">
          <h2>Coming Soon</h2>
          <p>We're expanding! More regions will be added in the future. Stay tuned for updates.</p>
          
          <div class="notify-box">
            <div class="notify-icon">üîî</div>
            <div class="notify-text">
              <h4>Want to know when Hoppy arrives in your region?</h4>
              <p>Contact us at <a href="mailto:dev@10botics.com">dev@10botics.com</a> to get notified!</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="availability-footer">
      <a href="/" class="footer-link">
        <img src="/hoppy-logo.jpeg" alt="Hoppy logo" class="footer-logo" />
        <span>Return to Hoppy Home</span>
      </a>
      <div class="contact-info">
        <p>Email: <a href="mailto:dev@10botics.com">dev@10botics.com</a></p>
        <p>Phone: 60844867</p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  .availability-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--hoppy-gray);
  }

  /* Header Section */
  .availability-header {
    background: linear-gradient(135deg, var(--hoppy-blue) 0%, #35a3c9 100%);
    padding: 2rem 2rem 4rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .header-content {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .back-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--hoppy-white);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    align-self: flex-start;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    background-color: rgba(255, 255, 255, 0.1);
  }

  .back-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateX(-5px);
  }

  .back-link svg {
    width: 20px;
    height: 20px;
  }

  .header-logo {
    width: 120px;
    height: auto;
    padding: 12px;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .availability-header h1 {
    color: var(--hoppy-white);
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .header-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    margin: 0;
  }

  /* Content Section */
  .availability-content {
    flex: 1;
    padding: 4rem 2rem;
  }

  .content-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .regions-intro {
    text-align: center;
    margin-bottom: 3rem;
    background-color: var(--hoppy-white);
    padding: 3rem;
    border-radius: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  }

  .globe-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .regions-intro h2 {
    color: var(--hoppy-navy);
    margin-bottom: 1rem;
  }

  .regions-intro p {
    color: var(--hoppy-gray-dark);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.8;
  }

  /* Regions Grid */
  .regions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .region-card {
    background: var(--hoppy-white);
    border-radius: 24px;
    padding: 2rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
    position: relative;
    overflow: hidden;
  }

  .region-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, var(--hoppy-blue), #35a3c9);
  }

  .region-card.available::before {
    background: linear-gradient(90deg, #10B981, #34D399);
  }

  .region-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.12);
  }

  .region-flag {
    font-size: 4rem;
    line-height: 1;
  }

  .region-info h3 {
    color: var(--hoppy-navy);
    margin: 0;
    font-size: 1.5rem;
  }

  .region-status {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    font-weight: 600;
    color: #10B981;
    margin-top: 0.5rem;
  }

  .status-dot {
    width: 10px;
    height: 10px;
    background-color: #10B981;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.2); }
  }

  .region-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .feature-tag {
    background-color: var(--hoppy-gray);
    color: var(--hoppy-navy);
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* Coming Soon Section */
  .coming-soon-section {
    background-color: var(--hoppy-white);
    padding: 3rem;
    border-radius: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    text-align: center;
  }

  .coming-soon-section h2 {
    color: var(--hoppy-navy);
    margin-bottom: 1rem;
  }

  .coming-soon-section > p {
    color: var(--hoppy-gray-dark);
    margin-bottom: 2rem;
  }

  .notify-box {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: linear-gradient(135deg, var(--hoppy-blue) 0%, #35a3c9 100%);
    padding: 1.5rem 2rem;
    border-radius: 20px;
    text-align: left;
  }

  .notify-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .notify-text h4 {
    color: var(--hoppy-white);
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
  }

  .notify-text p {
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    font-size: 1rem;
  }

  .notify-text a {
    color: var(--hoppy-white);
    font-weight: 600;
    text-decoration: underline;
    transition: opacity 0.3s ease;
  }

  .notify-text a:hover {
    opacity: 0.8;
  }

  /* Footer */
  .availability-footer {
    background-color: var(--hoppy-navy);
    padding: 3rem 2rem;
    text-align: center;
  }

  .footer-link {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: var(--hoppy-white);
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .footer-link:hover {
    transform: translateY(-5px);
  }

  .footer-logo {
    width: 120px;
    height: auto;
    padding: 15px;
    background-color: var(--hoppy-white);
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  .footer-link span {
    color: var(--hoppy-white);
  }

  .contact-info {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    color: var(--hoppy-white);
  }

  .contact-info p {
    margin: 0.5rem 0;
    font-size: 1rem;
  }

  .contact-info a {
    color: var(--hoppy-blue);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .contact-info a:hover {
    color: var(--hoppy-white);
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .availability-header {
      padding: 1.5rem 1rem 3rem;
    }

    .regions-intro,
    .coming-soon-section {
      padding: 2rem 1.5rem;
      border-radius: 20px;
    }

    .availability-content {
      padding: 2rem 1rem;
    }

    .notify-box {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .back-link {
      font-size: 0.9rem;
    }

    .header-logo {
      width: 100px;
    }
  }

  @media (max-width: 480px) {
    .regions-intro,
    .coming-soon-section {
      padding: 1.5rem 1rem;
    }

    .region-card {
      padding: 1.5rem;
    }

    .availability-footer {
      padding: 2rem 1rem;
    }

    .footer-logo {
      width: 100px;
    }
  }
</style>

